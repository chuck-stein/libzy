<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#370085</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Window-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/bkg_gradient_anim</item>
        <item name="android:windowActivityTransitions">true</item>

            <!-- TODO: remove if unnecessary -->
<!--        <item name="android:windowEnterTransition"></item>-->
<!--        <item name="android:windowExitTransition">@transition/explode</item>-->

        <!-- Styles -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
