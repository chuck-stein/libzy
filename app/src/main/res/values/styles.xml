<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- <item name="colorAccent">@color/offWhite</item> TODO: delete this if I don't need to go back -->

        <!-- Text -->
        <item name="fontFamily">@font/varela_round</item>
        <item name="android:textAlignment">center</item>

        <!-- Window-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/bkg_gradient_anim</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Styles -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="chipStyle">@style/Chip</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="rippleColor">@color/accent</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

</resources>
