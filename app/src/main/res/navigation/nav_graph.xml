<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/launchFragment">

    <fragment
        android:id="@+id/launchFragment"
        android:name="com.chuckstein.libzy.view.launch.LaunchFragment"
        android:label="fragment_launch"
        tools:layout="@layout/fragment_launch">
        <action
            android:id="@+id/action_launchFragment_to_selectGenresFragment"
            app:destination="@id/selectGenresFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_launchFragment_to_connectSpotifyFragment"
            app:destination="@id/connectSpotifyFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/browseResultsFragment"
        android:name="com.chuckstein.libzy.view.browseresults.BrowseResultsFragment"
        android:label="fragment_browse_results"
        tools:layout="@layout/fragment_browse_results">
        <argument
            android:name="genre"
            app:argType="string" />
        <action
            android:id="@+id/action_browseResultsFragment_to_connectSpotifyFragment"
            app:destination="@id/connectSpotifyFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="numResults"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/selectGenresFragment"
        android:name="com.chuckstein.libzy.view.selectgenres.SelectGenresFragment"
        android:label="fragment_select_genres"
        tools:layout="@layout/fragment_select_genres">
        <action
            android:id="@+id/action_selectGenresFragment_to_browseResultsFragment"
            app:destination="@id/browseResultsFragment" />
        <action
            android:id="@+id/action_selectGenresFragment_to_connectSpotifyFragment"
            app:destination="@id/connectSpotifyFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/connectSpotifyFragment"
        android:name="com.chuckstein.libzy.view.connectspotify.ConnectSpotifyFragment"
        android:label="fragment_connect_spotify"
        tools:layout="@layout/fragment_connect_spotify">
        <action
            android:id="@+id/action_connectSpotifyFragment_to_selectGenresFragment"
            app:destination="@id/selectGenresFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="networkErrorReceived"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>