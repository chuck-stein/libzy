<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/album_art_size"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/light_spacing"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="@dimen/album_art_size"
        android:layout_height="@dimen/album_art_size"
        android:contentDescription="@string/album_art_desc"
        android:src="@drawable/placeholder_album_art" />

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/album_title_placeholder" />

    <TextView
        android:id="@+id/albumArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/artist_name_placeholder"
        android:textColor="@color/gray" />

</LinearLayout>