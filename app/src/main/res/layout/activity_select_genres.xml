<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectGenresActivity">

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/greeting_text"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructionsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fetching_library_data_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_text" />

    <ScrollView
        android:id="@+id/genreOptionsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionsText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/genreOptionsChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="6dp">

                <!-- These chips are placeholders for testing UI -->

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hip hop"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jazz"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="psychedelic rock"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="indie soul"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dream pop"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="art rock"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="grunge"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/loading_chip8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chillwave"/>

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>