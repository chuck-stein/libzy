<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/standard_spacing"
    android:orientation="vertical">

    <TextView
        android:id="@+id/genre_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genre_name_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/subheading_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albums_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/light_spacing"
        android:orientation="horizontal" />
    <!--tools:layout_editor_absoluteX="74dp"   TODO: figure out what this does and why it was suggested -->

</LinearLayout>