<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/light_spacing">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/album_art_shimmer"
        android:layout_width="@dimen/album_art_size"
        android:layout_height="@dimen/album_art_size"
        app:shimmer_repeat_count="0">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/album_art_desc"
            android:src="@drawable/placeholder_album_art" />

    </com.facebook.shimmer.ShimmerFrameLayout>


    <TextView
        android:id="@+id/album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/album_title_placeholder" />
    <!-- TODO: support line wrap, max 2 lines (and maybe for artist name as well? -->

    <TextView
        android:id="@+id/album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/artist_name_placeholder"
        android:textColor="@color/gray" />

</LinearLayout>